<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Window">
        <Setter Property="Background" Value="Gray"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#FF88BEE2"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5,5,5,5"/>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Margin" Value="20,0,10,0"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="#FF88BEE2"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
        <Setter Property="Background" Value="#FF0D5789"/>
        <Setter Property="BorderBrush" Value="#FF156398"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FF0D5789"/>
        <Setter Property="BorderBrush" Value="#FF156398"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#FF88BEE2"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="Background" Value="#FF88BEE2"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#FF88BEE2"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
    </Style>

</ResourceDictionary>