<Window x:Class="RealEstatePriceForecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstatePriceForecast"
        mc:Ignorable="d"
             Title="Прогнозирование цен на недвижимость" Height="750" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0">
            <Button x:Name="btnPredict" Content="Поиск недвижимости" Width="199" Click="btnPredict_Click_1"/>
            <Button x:Name="btnCalculate" Content="Калькулятор ипотеки" Width="217" Click="btnCalculate_Click"/>
            <Button x:Name="btnMap" Content="Карта" Click="btnMap_Click"/>
        </WrapPanel>
        
        <Frame x:Name="MainFrame" Source="Pages/PredictPage.xaml" Grid.Row="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
