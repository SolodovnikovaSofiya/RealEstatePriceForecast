<Window x:Class="RealEstatePriceForecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstatePriceForecast"
        mc:Ignorable="d"
             Title="Прогнозирование цен на недвижимость" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Поиск недвижимости">
                <StackPanel Margin="10,0,0,0">
                    <WrapPanel Orientation="Vertical" Width="410" Height="485" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center">

                        <!-- Минут до метро -->
                        <TextBlock Text="Минут до метро:" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtMinutesToMetro" Width="200" />

                        <!-- Количество комнат -->
                        <TextBlock Text="Количество комнат:" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtRooms" Width="200" />

                        <!-- Площадь (м²) -->
                        <TextBlock Text="Площадь (м²):" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtArea" Width="200" />

                        <!-- Жилая площадь -->
                        <TextBlock Text="Жилая площадь (м²):" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtLivingArea" Width="200" />

                        <!-- Площадь кухни -->
                        <TextBlock Text="Площадь кухни (м²):" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtKitchenArea" Width="200" />

                        <!-- Этаж -->
                        <TextBlock Text="Этаж:" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtFloor" Width="200" />

                        <!-- Всего этажей -->
                        <TextBlock Text="Всего этажей:" Width="150" VerticalAlignment="Center"/>
                        <TextBox Name="txtTotalFloors" Width="200" />

                        <!-- Выбор станции метро -->
                        <TextBlock Text="Станция метро:" Width="150" VerticalAlignment="Center"/>
                        <ComboBox Name="cmbMetroStations" Width="200" SelectionChanged="cmbMetroStations_SelectionChanged"/>

                        <TextBlock Text="Широта:" Width="150" VerticalAlignment="Center"/>
                        <TextBlock Name="txtLatitude" Width="200" FontWeight="Bold" Foreground="DarkBlue"/>

                        <TextBlock Text="Долгота:" Width="150" VerticalAlignment="Center"/>
                        <TextBlock Name="txtLongitude" Width="200" FontWeight="Bold" Foreground="DarkBlue"/>

                        <!-- Кнопка для предсказания -->
                        <Button Content="Прогноз цены" Width="200" Height="40" Foreground="White" Click="btnPredict_Click" Margin="0,10,0,0" Background="#FF6F6B6B"/>

                        <!-- Поле для отображения результата -->
                        <TextBlock Name="txtResult" FontSize="16" FontWeight="Bold" Foreground="Blue" Margin="0,10,0,0" Height="26" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>

                    </WrapPanel>

                </StackPanel>
            </TabItem>



            <TabItem Header="Калькулятор ипотеки">
                <StackPanel Margin="20">

                    <!-- Стоимость недвижимости -->
                    <TextBlock Text="Стоимость недвижимости" FontWeight="Bold"/>
                    <TextBox x:Name="PropertyPriceTextBox" TextChanged="PropertyPriceTextBox_TextChanged"/>
                    <Slider x:Name="PropertyPriceSlider" Minimum="1000000" Maximum="50000000" TickFrequency="100000" IsSnapToTickEnabled="True" ValueChanged="PropertyPriceSlider_ValueChanged"/>

                    <!-- Первоначальный взнос -->
                    <TextBlock Text="Первоначальный взнос" FontWeight="Bold"/>
                    <TextBox x:Name="DownPaymentTextBox" TextChanged="DownPaymentTextBox_TextChanged"/>
                    <Slider x:Name="DownPaymentSlider" Minimum="0" Maximum="5000000" TickFrequency="50000" IsSnapToTickEnabled="True" ValueChanged="DownPaymentSlider_ValueChanged"/>

                    <!-- Срок кредита -->
                    <TextBlock Text="Срок кредита (лет)" FontWeight="Bold"/>
                    <TextBox x:Name="LoanTermTextBox" TextChanged="LoanTermTextBox_TextChanged"/>
                    <Slider x:Name="LoanTermSlider" Minimum="5" Maximum="30" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="LoanTermSlider_ValueChanged"/>

                    <!-- Процентная ставка -->
                    <TextBlock Text="Процентная ставка (%)" FontWeight="Bold"/>
                    <TextBox x:Name="InterestRateTextBox" TextChanged="InterestRateTextBox_TextChanged"/>
                    <Slider x:Name="InterestRateSlider" Minimum="2" Maximum="30" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="InterestRateSlider_ValueChanged"/>

                    <!-- Результаты расчета -->
                    <TextBlock Text="Результаты:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock x:Name="MonthlyPaymentTextBlock"/>
                    <TextBlock x:Name="LoanAmountTextBlock"/>
                    <TextBlock x:Name="TotalInterestTextBlock"/>
                    <TextBlock x:Name="TotalPaymentTextBlock"/>
                    <TextBlock x:Name="RequiredIncomeTextBlock"/>

                </StackPanel>
            </TabItem>

            <TabItem Header="Аналитика">
                <StackPanel Margin="10,10,10,10" Height="414">
                    <Image Source="/Resources/img2.jpg" Height="398" Width="649" />

                </StackPanel>
            </TabItem>
            <TabItem Header="Карта">
                <Grid>
                    <WebBrowser x:Name="OSMMapBrowser" Loaded="OSMMapBrowser_Loaded"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
