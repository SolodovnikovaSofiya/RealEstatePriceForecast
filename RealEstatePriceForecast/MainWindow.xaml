<Window x:Class="RealEstatePriceForecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstatePriceForecast"
        mc:Ignorable="d"
             Title="Прогнозирование цен на недвижимость" Height="650" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0">
            <Button x:Name="btnPredict" Click="btnPredict_Click">
               <TextBlock Text="Поиск недвижимости" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button x:Name="btnCalculate" Click="btnCalculate_Click">
                <TextBlock Text="Калькулятор ипотеки" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button x:Name="btnMap"  Click="btnMap_Click">
                <TextBlock Text="Карта" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </WrapPanel>
        
        <Frame x:Name="MainFrame" Source="Pages/PredictPage.xaml" Grid.Row="1" NavigationUIVisibility="Hidden" VerticalAlignment="Center"/>

    </Grid>
</Window>
